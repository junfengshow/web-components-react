{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"],
      "@packages": ["packages/*"],
      "@fdt/cmp-react": ["packages/cmp-react/src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["packages/**/*", "typings"],
  "exclude": ["node_modules", "lib", "es", "dist", "docs"]
}
